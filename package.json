{
    "name": "barataribeiro_blog",
    "version": "1.0.0",
    "description": "Personal blog of Barata-Ribeiro, built with Node.js, Express.js, MongoDB, EJS, and TypeScript.",
    "main": "dist/server.js",
    "private": true,
    "scripts": {
        "start": "node dist/server.js",
        "start:tsnode": "ts-node src/server.ts",
        "dev": "nodemon src/server.ts",
        "build:dev": "rm -rf dist && tsc --build && cp -r src/views dist/views",
        "build": "tsc --build && cp -r src/views dist/views",
        "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Barata-Ribeiro/barataribeiro_blog.git"
    },
    "keywords": [
        "nodejs",
        "blog",
        "api",
        "jwt",
        "crud",
        "node",
        "typescript",
        "mongodb",
        "mongoose",
        "expressjs",
        "ejs",
        "ejscript",
        "ejs-express"
    ],
    "author": "Barata-Ribeiro",
    "license": "GPL-3.0-only",
    "bugs": {
        "url": "https://github.com/Barata-Ribeiro/barataribeiro_blog/issues"
    },
    "homepage": ".",
