<section class="home__page">
    <div class="home__latest__articles">
        <div class="latest__articles__column">
            <% featuredPosts.slice(0, 1).forEach(post => { %>
            <article class="latest__articles__featured">
                <h2 class="featured__title"><%= post.title %></h2>
                <p class="featured__summary"><%= post.content %></p>
                <a class="featured__link" href="/posts/<%= post._id %>/<%= post.title %>">Read More</a>
            </article>
            <% }); %>
            <% nextSixPosts.slice(0, 3).forEach(post => { %>
            <article class="latest__articles__regular-post">
                <h2 class="regular-post__title"><%= post.title %></h2>
                <p class="regular-post__summary"><%= post.content %></p>
            </article>
            <% }); %>
        </div>

        <div class="latest__articles__column">
            <% featuredPosts.slice(1, 2).forEach(post => { %>
            <article class="latest__articles__featured">
                <h2 class="featured__title"><%= post.title %></h2>
                <p class="featured__summary"><%= post.content %></p>
                <a class="featured__link" href="/posts/<%= post._id %>/<%= post.title %>">Read More</a>
            </article>
            <% }); %>
            <% nextSixPosts.slice(3, 6).forEach(post => { %>
            <article class="latest__articles__regular-post">
                <h2 class="regular-post__title"><%= post.title %></h2>
                <p class="regular-post__summary"><%= post.content %></p>
            </article>
            <% }); %>
        </div>
    </div>
</section>