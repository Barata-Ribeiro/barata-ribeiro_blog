<section id="register-account">
    <h1 class="register-account__title">Register</h1>

    <form action="/api/v1/register" method="POST" class="rendered-form">
        <div id="field-username">
            <label for="username">
                Username
                <span class="formbuilder-required">*</span></label
            >
            <input
                type="text"
                placeholder="Username"
                autocomplete="username"
                class="form__input-username"
                name="username"
                access="false"
                id="username"
                required="required"
                aria-required="true"
                aria-label="Username"
            />
        </div>
        <div id="field-email">
            <label for="email">Email</label>
            <input
                type="email"
                autocomplete="email"
                placeholder="contact@example.com"
                class="register-account__input-email"
                name="email"
                access="false"
                id="email"
                required="required"
                aria-required="true"
                aria-label="Email"
            />
        </div>
        <div id="field-password">
            <label for="password">
                Password
                <span class="formbuilder-required">*</span></label
            >
            <input
                type="password"
                placeholder="ex: 123456"
                autocomplete="new-password"
                class="register-account__input-password"
                name="password"
                access="false"
                id="password"
                required="required"
                aria-required="true"
                aria-label="Password"
            />
        </div>
        <div id="field-register-account__button-submit">
            <button
                type="submit"
                class="register-account__button-submit"
                name="button-register-submit"
                access="false"
                id="button-register-submit"
                aria-label="Sign Up"
            >
                Sign Up
            </button>
        </div>
    </form>

    <p class="register-account__login">
        Already have an account? <a href="/auth/login" class="register-account__login-link">Login</a>
    </p>
</section>
