<form action="/posts" method="GET" class="search__form" role="search">
    <label for="search-tags" class="search__label">Search</label>
    <input type="search" id="search-tags" name="tags" aria-label="Search tags" class="form__input"
        pattern="[A-Za-z,.-]+" placeholder="Ex: fun, linux, markdown" required aria-describedby="search-help" />
    <span id="search-help" class="screenreader" aria-label="Enter tags separated by commas, periods, or dashes">Enter
        tags separated by commas, periods, or dashes</span>
    <button type="submit" class="screenreader" aria-label="Search">Search</button>
</form>